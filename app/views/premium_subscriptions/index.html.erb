<p id="notice"><%= notice %></p>

<h1>Premium Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Shirt size</th>
      <th>User</th>
      <th>Subscription length</th>
      <th>Shipped</th>
      <th>Shipping address</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @premium_subscriptions.each do |premium_subscription| %>
      <tr>
        <td><%= premium_subscription.shirt_size %></td>
        <td><%= premium_subscription.user_id %></td>
        <td><%= premium_subscription.subscription_length.humanize %></td>
        <td><%= premium_subscription.shipped %></td>
        <td><%= premium_subscription.shipping_address %></td>
        <td><%= premium_subscription.created_at %></td>
        <td><%= link_to 'Show', premium_subscription %></td>
        <td><%= link_to 'Edit', edit_premium_subscription_path(premium_subscription) %></td>
        <td><%= link_to 'Destroy', premium_subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Users', users_path %> |
<%= link_to 'New Premium Subscription', new_premium_subscription_path %> |
